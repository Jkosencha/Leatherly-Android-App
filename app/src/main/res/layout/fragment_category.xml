<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="55dp"
        tools:context=".ui.category.CategoryFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/bagscard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#BCECD5BD"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="369dp"
                android:layout_height="153dp"
                android:layout_gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="148dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="168dp"
                    android:text="Bags"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/image1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.49" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="153dp"
                    android:layout_height="139dp"
                    android:src="@drawable/womenbag1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/text1"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/acccessoriescard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#BCECD5BD"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="369dp"
                android:layout_height="153dp"
                android:layout_gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="148dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="168dp"
                    android:text="Accessories"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/image2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.8" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="153dp"
                    android:layout_height="139dp"
                    android:src="@drawable/leatherwatch1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/text2"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/clothescard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#BCECD5BD"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="369dp"
                android:layout_height="153dp"
                android:layout_gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="148dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="168dp"
                    android:text="Clothes"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/image3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.686" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="153dp"
                    android:layout_height="139dp"
                    android:src="@drawable/clothe1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/text3"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/shoescard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#BCECD5BD"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="369dp"
                android:layout_height="153dp"
                android:layout_gravity="center"
                android:padding="15dp">

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="148dp"
                    android:layout_height="85dp"
                    android:layout_marginEnd="168dp"
                    android:text="Shoes"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/image4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.49" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="153dp"
                    android:layout_height="139dp"
                    android:src="@drawable/shoes1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/text4"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>



</ScrollView>